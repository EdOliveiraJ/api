{
  "compilerOptions": {
    "target": "es2018",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@model/*": ["src/model/*"],
      "@controller/*": ["src/controller/*"],
      "@config/*": ["src/config/*"],
      "@service/*": ["src/service/*"],
      "@middleware/*": ["src/middleware/*"],
      "@store": ["store/index.js"]
    }
  },
  "exclude": ["node_modules", "dist"]
}