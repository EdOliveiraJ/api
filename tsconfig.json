{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}